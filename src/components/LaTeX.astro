---
import katex from "katex";

interface Props {
  formula: string;
  inline?: boolean;
}

const { formula = "", inline } = Astro.props;
const html = katex.renderToString(formula, { throwOnError: false });
---

{
  inline ? (
    <span set:html={html} style="font-size: 0.8em;" />
  ) : (
    <div class="text-center">
      <span set:html={html} style="font-size: 0.8em;" />
    </div>
  )
}
