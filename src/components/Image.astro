---
import { Image as AstroImage } from "astro:assets";

interface Props {
  source: ImageMetadata;
  altText: string;
  width?: number;
  height?: number;
  quality?: number;
  class?: string;
}

const { source, altText, width, height, quality = 90, class: className } = Astro.props;
---

<AstroImage
  class={`rounded-lg max-h-[35rem] object-contain !px-0 ${className || ''}`}
  src={source}
  alt={altText}
  width={width}
  height={height}
  quality={quality}
/>
